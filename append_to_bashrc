# vi motion in terminal
set -o vi

# prevent Ctrl+D from disconnecting the session
set -o ignoreeof

# save history after each command
export PROMPT_COMMAND="history -a && history -n"
shopt -s histappend

# allow coredump
ulimit -c unlimited

# enables glob **/
shopt -s globstar

#?(pattern)	Matches zero or one occurrence        (pattern)?
#*(pattern)	Matches zero or more occurrences      (pattern)*
#+(pattern)	Matches one or more occurrences       (pattern)+
#@(pattern)	Matches exactly one of the patterns   (pattern)
#!(pattern)	Matches anything except the patterns  Negation
shopt -s extglob

